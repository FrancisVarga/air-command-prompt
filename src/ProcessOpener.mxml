<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/halo"
					   minWidth="1024" minHeight="768" 
					   creationComplete="windowedapplication1_creationCompleteHandler(event)"
					   xmlns:ns="library://ns.adobe.com/flex/mx" xmlns:local="*">
	
	<fx:Script>
		<![CDATA[
			import flash.events.KeyboardEvent;
			
			import mx.events.FlexEvent;
			
			private var nativeProcess : NativeProcess;
			
			private function onAppKeyDown(event : KeyboardEvent):void{
				
				if(event.ctrlKey == true && event.keyCode == 84){
					
					tabContainer.addElement(new CommandContent());
					
				} 
				
			}


			protected function windowedapplication1_creationCompleteHandler(event:FlexEvent):void
			{
				this.addEventListener(KeyboardEvent.KEY_DOWN, onAppKeyDown);
			}

		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:layout><s:VerticalLayout/></s:layout>
	
	<ns:TabNavigator id="tabContainer" width="100%" height="100%">
		<local:CommandContent label="Command 1" width="100%" height="100%"/>
	</ns:TabNavigator>
	
</s:WindowedApplication>
